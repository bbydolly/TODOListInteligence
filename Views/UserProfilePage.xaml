<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODOListInteligence.Views.UserProfilePage"
             Title="Editar Perfil">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            <!-- Nombre -->
            <Label Text="Nombre:" FontAttributes="Bold"/>
            <Entry Text="{Binding Name, Mode=TwoWay}" Placeholder="Introduce tu nombre"/>

            <!-- Email -->
            <Label Text="Email:" FontAttributes="Bold"/>
            <Entry Text="{Binding Email, Mode=TwoWay}" Placeholder="Introduce tu email"/>

            <!-- Idioma (RadioButtons, sin converter) -->
            <Label Text="Idioma:" FontAttributes="Bold"/>
            <HorizontalStackLayout RadioButtonGroup.GroupName="Idioma"
                                   RadioButtonGroup.SelectedValue="{Binding UserLanguage, Mode=TwoWay}">
                <RadioButton Content="Español" Value="es"/>
                <RadioButton Content="Inglés" Value="en"/>
            </HorizontalStackLayout>

            <!-- Tema (RadioButtons, sin converter) -->
            <Label Text="Tema:" FontAttributes="Bold"/>
            <HorizontalStackLayout RadioButtonGroup.GroupName="Tema"
                                   RadioButtonGroup.SelectedValue="{Binding UserTheme, Mode=TwoWay}">
                <RadioButton Content="Claro" Value="light"/>
                <RadioButton Content="Oscuro" Value="dark"/>
            </HorizontalStackLayout>

            <!-- Botón para guardar cambios -->
            <Button Text="Guardar Cambios"
                    HorizontalOptions="Center"
                    Margin="0,30,0,0"
                    Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
