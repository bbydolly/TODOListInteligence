<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODOListInteligence.Views.UserProfilePage"
             Title="Perfil de Usuario">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            <!-- Nombre -->
            <Label Text="Nombre:" FontAttributes="Bold"/>
            <Label Text="{Binding Name}" FontSize="18"/>

            <!-- Email -->
            <Label Text="Email:" FontAttributes="Bold"/>
            <Label Text="{Binding Email}" FontSize="18"/>

            <!-- Idioma -->
            <Label Text="Idioma:" FontAttributes="Bold"/>
            <Label Text="{Binding UserLanguage}" FontSize="18"/>

            <!-- Tema -->
            <Label Text="Tema:" FontAttributes="Bold"/>
            <Label Text="{Binding UserTheme}" FontSize="18"/>

            <!-- Puedes añadir más campos según tu modelo -->

            <!-- Botón para editar perfil (opcional) -->
            <Button Text="Editar Perfil"
                    HorizontalOptions="Center"
                    Margin="0,30,0,0"
                    Clicked="OnEditProfileClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
