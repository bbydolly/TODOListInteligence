<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODOListInteligence.Views.InitialQuestionnairePage"
             Title="InitialQuestionnairePage">
    <ScrollView>
        <!--TODO FIX-->
        <VerticalStackLayout Spacing="24" Padding="20">

            <!-- Pregunta 1: Objetivos principales --><!--
            <Label Text="¿Cuáles son tus principales objetivos?" FontAttributes="Bold"/>
            <CheckBox IsChecked="{Binding SaludChecked}" Content="Salud y bienestar"/>
            <CheckBox IsChecked="{Binding FamiliaChecked}" Content="Familia y relaciones"/>
            <CheckBox IsChecked="{Binding CarreraChecked}" Content="Carrera profesional/estudios"/>
            <CheckBox IsChecked="{Binding DesarrolloChecked}" Content="Desarrollo personal"/>
            <CheckBox IsChecked="{Binding FinanzasChecked}" Content="Finanzas"/>
            <CheckBox IsChecked="{Binding OcioChecked}" Content="Ocio y tiempo libre"/>
            <Entry Placeholder="Otro (especifica)" Text="{Binding OtroObjetivo}"/>

            --><!-- Pregunta 2: Actividades importantes --><!--
            <Label Text="¿Qué actividades consideras más importantes en tu día a día?" FontAttributes="Bold"/>
            <CheckBox IsChecked="{Binding EjercicioChecked}" Content="Hacer ejercicio"/>
            <CheckBox IsChecked="{Binding TiempoFamiliaChecked}" Content="Pasar tiempo con la familia"/>
            <CheckBox IsChecked="{Binding AprenderChecked}" Content="Aprender cosas nuevas"/>
            <CheckBox IsChecked="{Binding TrabajoChecked}" Content="Avanzar en el trabajo/proyectos"/>
            <CheckBox IsChecked="{Binding FinanzasDiaChecked}" Content="Organizar tus finanzas"/>
            <CheckBox IsChecked="{Binding SaludMentalChecked}" Content="Cuidar tu salud mental"/>
            <Entry Placeholder="Otro (especifica)" Text="{Binding OtroActividad}"/>

            --><!-- Pregunta 3: Tareas urgentes --><!--
            <Label Text="¿Qué tipo de tareas suelen ser más urgentes para ti?" FontAttributes="Bold"/>
            <Picker Title="Selecciona una opción" ItemsSource="{Binding OpcionesUrgentes}" SelectedItem="{Binding UrgenteSeleccionada}"/>

            --><!-- Pregunta 4: Palabras clave de tus prioridades --><!--
            <Label Text="¿Qué palabras clave definen tus prioridades actuales?" FontAttributes="Bold"/>
            <Entry Placeholder="Ejemplo: salud, familia, trabajo, aprender, ahorrar" Text="{Binding PalabrasClave}"/>

            --><!-- Botón para enviar el cuestionario --><!--
            <Button Text="Guardar y continuar" Command="{Binding GuardarCuestionarioCommand}"/>-->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>