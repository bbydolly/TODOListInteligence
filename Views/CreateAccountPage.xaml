<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TODOListInteligence.ViewModels"
             x:Class="TODOListInteligence.Views.CreateAccountPage"
             Title="Crear Cuenta">

    <ContentPage.BindingContext>
        <viewmodel:CreateAccountPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">
        <Entry
            Placeholder="Nombre"
            HorizontalOptions="Center"
            WidthRequest="250"/>

        <Entry
            Placeholder="Email"
            Keyboard="Email"
            HorizontalOptions="Center"
            WidthRequest="250"/>

        <Entry
            Placeholder="Contraseña"
           IsPassword="True"
            HorizontalOptions="Center"
            WidthRequest="250"/>    

        <!--Clicked enlaza una función definida en el code-behind-->
        <Button
            Text="Crear cuenta"
            Clicked="CreateAccount"
            HorizontalOptions="Center" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Label 
                Text="¿Ya tienes cuenta?" 
                VerticalOptions="Center"/>
            <Label 
                Text="Iniciar sesión"
                TextColor="Blue"
                TextDecorations="Underline"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="InitSession"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
