<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TODOListInteligence.ViewModels"
             x:Class="TODOListInteligence.Views.CreateAccountPage"
             Title="Crear Cuenta">

    <ContentPage.BindingContext>
        <viewmodel:CreateAccountPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">

        <!--spacio entre los botones
        Command es una propiedad que se usa para enlazar un control. busca su contenido en el 
        archivo enlazado en xmlns:viewmodel, se relaciona con el tipo ICommand en el .cs -->
        <Button
            Text="Crear cuenta"
            Command="{Binding CrearCuentaCommand}"
            HorizontalOptions="Center" />

        <Button
            Text="Iniciar sesiÃ³n"
            Command="{Binding IniciarSesionCommand}"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
